                const url = "/Proizvod/MeniView?tip=" + tip + "&pol=" + pol + "&brend=" + this.value + "&cijena=" + cijena;

                console.log(url);

                const response = fetch(url);

                window.location.href = url;

            };
        }

        var radPrices = document.filterPrices.filterPriceRadios;
