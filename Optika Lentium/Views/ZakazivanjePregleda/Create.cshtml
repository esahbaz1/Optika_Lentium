@model Optika_Lentium.Models.ZakazivanjePregleda

@{
    ViewData["Title"] = "Zakaži pregled";
}

<h1>Create</h1>

<h4>Zakazivanje pregleda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create" asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="imePrezime" class="control-label">Ime i prezime</label>
                <input type="text" id="imePrezime" name="imePrezime" class="form-control" required />
                <span asp-validation-for="imePrezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <input type="email" id="email" name="email" class="form-control" required />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="brojTelefona" class="control-label">Broj telefona</label>
                <input type="text" id="brojTelefona" name="brojTelefona" class="form-control" required />
                <span asp-validation-for="brojTelefona" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="nacinKontakta" class="control-label">Nacin kontakta</label>
                <input type="text" id="nacinKontakta" name="nacinKontakta" class="form-control" required />
                <span asp-validation-for="nacinKontakta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="danPregleda" class="control-label">Dan pregleda</label>
                <input type="text" id="danPregleda" name="danPregleda" class="form-control" required />
                <span asp-validation-for="danPregleda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="vrijemePregleda" class="control-label">Vrijeme pregleda</label>
                <input type="text" id="vrijemePregleda" name="vrijemePregleda" class="form-control" required />
                <span asp-validation-for="vrijemePregleda" class="text-danger"></span>
            </div>
            <div class="form-group">

                    <input type="submit" asp-controller="ZakazivanjePregleda" asp-action="Uspjesnozakazivanje" value="Create" class="btn btn-primary" />
               
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vrati se na listu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}