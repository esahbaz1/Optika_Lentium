@{
    ViewData["Title"] = "Meni";
    Layout = null;
}

@using Optika_Lentium.Patterns;
@inject IProizvod ProizvodService

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>EShopper - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">

    <!-- Favicon -->
    <link href="~/images/cale1.jpg" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="css/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/Meni.css" rel="stylesheet">
</head>

<body>
    <!-- Topbar Start -->
    <div class="container-fluid">
        <div class="row bg-secondary py-2 px-xl-5">
            <div class="col-lg-6 d-none d-lg-block">
            </div>
            <div class="col-lg-6 text-center text-lg-right">
                <div class="d-inline-flex align-items-center">
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a class="text-dark px-2" href="">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a class="text-dark pl-2" href="">
                        <i class="fab fa-youtube"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row align-items-center py-3 px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a href="" class="text-decoration-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-1 mr-0">O</span>ptika Lentium</h1>
                </a>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
    <!-- Navbar Start -->
    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h6 class="m-0">Kategorije</h6>

                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 1;">
                    <div class="navbar-nav w-100 overflow-hidden" background="color: #fff"
                         style="height: 200px">
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-toggle="dropdown">Dioptrijski okviri <i class="fa fa-angle-down float-right mt-1"></i></a>
                            <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                @{
                                    var pol = Kategorija.Muski;
                                    var tip = Tip.Okviri;
                                }
                                <a class="dropdown-item" asp-controller="Proizvod" asp-action="MeniView" asp-route-tip="@tip" asp-route-pol="@pol">Muški</a>
                                @{
                                    pol = Kategorija.Zenski;
                                    tip = Tip.Okviri;
                                }
                                <a class="dropdown-item" asp-controller="Proizvod" asp-action="MeniView" asp-route-tip="@tip" asp-route-pol="@pol">Ženski</a>
                                @{
                                    pol = Kategorija.Djeciji;
                                    tip = Tip.Okviri;
                                }
                                <a class="dropdown-item" asp-controller="Proizvod" asp-action="MeniView" asp-route-tip="@tip" asp-route-pol="@pol">Dječiji</a>
                            </div>
                        </div>

                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-toggle="dropdown">Sunčane naočale <i class="fa fa-angle-down float-right mt-1"></i></a>
                            <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                @{
                                    pol = Kategorija.Zenski;
                                    tip = Tip.Naocale;
                                }
                                <a class="dropdown-item" asp-controller="Proizvod" asp-action="MeniView" asp-route-tip="@tip" asp-route-pol="@pol">Ženske</a>
                                @{
                                    pol = Kategorija.Muski;
                                    tip = Tip.Naocale;
                                }
                                <a class ="dropdown-item" asp-controller="Proizvod" asp-action="MeniView" asp-route-tip="@tip" asp-route-pol="@pol">Muške</a>
                                @{
                                    pol = Kategorija.Djeciji;
                                    tip = Tip.Naocale;
                                }
                                <a class="dropdown-item" asp-controller="Proizvod" asp-action="MeniView" asp-route-tip="@tip" asp-route-pol="@pol">Dječije</a>
                            </div>
                        </div>

                        <a href="" class="nav-item nav-link">Leće i otopine</a>
                        <a href="" class="nav-item nav-link">Asesoari</a>

                        

                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">Optika</span>Lentium</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0">
                            <a class="nav-item nav-link" asp-controller="Proizvod" asp-action="Index">Početna</a>
                            <a href="shop.html" class="nav-item nav-link active">Pregled</a>

                            <a class="nav-item nav-link" asp-controller="Proizvod" asp-action="KontaktView">Kontakt</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0">
                            <a class="nav-item nav-link" asp-controller="Proizvod" asp-action="LoginView">Login</a>
                            <a class="nav-item nav-link" asp-controller="Proizvod" asp-action="SignupView">Register</a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>


    <!-- Navbar End -->
    <!-- Page Header Start -->
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Dobrodosli na online kupovinu</h1>

        </div>
    </div>

    <!-- Page Header End -->
    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filtrirano po cijeni</h5>
                    <form name="filterPrices">
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterPriceRadios" value="sve" class="custom-control-input" checked id="price-all">
                            <label class="custom-control-label" for="price-all">Sve cijene</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterPriceRadios" value="0-100" class="custom-control-input" id="price-1">
                            <label class="custom-control-label" for="price-1">0 - 100 KM</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterPriceRadios" value="100-200" class="custom-control-input" id="price-2">
                            <label class="custom-control-label" for="price-2">100 - 200 KM</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterPriceRadios" value="200-300" class="custom-control-input" id="price-3">
                            <label class="custom-control-label" for="price-3">200 - 300 KM</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterPriceRadios" value="300-400" class="custom-control-input" id="price-4">
                            <label class="custom-control-label" for="price-4">300 - 400 KM</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between">
                            <input type="radio" name="filterPriceRadios" value="400-500" class="custom-control-input" id="price-5">
                            <label class="custom-control-label" for="price-5">400 - 500 KM</label>
                        </div>
                    </form>
                </div>
                <!-- Price End -->
                <!-- Size Start -->
                <div class="mb-5">
                    <h5 class="font-weight-semi-bold mb-4">Filtrirano po brendu</h5>
                    <form name="filterBrendovi">
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterBrandRadios" class="custom-control-input" value="svi" checked id="svi-brendovi">
                            <label class="custom-control-label" for="svi-brendovi">Svi brendovi</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterBrandRadios" class="custom-control-input" value="Adidas" id="adidas">
                            <label class="custom-control-label" for="adidas">Adidas</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterBrandRadios" class="custom-control-input" value="Gucci" id="gucci">
                            <label class="custom-control-label" for="gucci">Gucci</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterBrandRadios" class="custom-control-input" value="Ray Ban" id="rayban">
                            <label class="custom-control-label" for="rayban">Ray Ban</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between mb-3">
                            <input type="radio" name="filterBrandRadios" class="custom-control-input" value="Hugo Boss" id="hugo">
                            <label class="custom-control-label" for="hugo">Hugo Boss</label>
                        </div>
                        <div class="custom-control custom-radio d-flex align-items-center justify-content-between">
                            <input type="radio" name="filterBrandRadios" class="custom-control-input" value="Vogue" id="vogue">
                            <label class="custom-control-label" for="vogue">Vogue</label>
                        </div>
                    </form>
                </div>
                <!-- Size End -->
            </div>
            <!-- Shop Sidebar End -->
            <!-- Shop Product Start -->
            <div class="col-lg-9 col-md-12">
                <div id="message" class="message" style="display: none; "></div>
                <div class="row pb-3">
                    @foreach (Proizvod p in ProizvodService.GetFilteredProducts())
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                            <div class="card product-item border-0 mb-4">
                                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                    <img class="img-fluid w-100" src=@p.slikaURL alt="">
                                </div>
                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                    <h6 class="text-truncate mb-3">@p.nazivProizvod</h6>
                                    <div class="d-flex justify-content-center">
                                        <h6>@p.cijena KM</h6>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-between bg-light border">
                                    <a class="btn btn-sm text-dark p-0" asp-area="" asp-controller="Proizvod" asp-action="PregledProView" asp-route-id="@p.proizvodId"><i class="fas fa-eye text-primary mr-1"></i>Vidi detalje</a>
                                    <a href="javascript:AddToCart(@p.proizvodId)" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Dodaj u korpu</a>
                                </div>
                            </div>
                        </div>
                    }

                    
                    <div class="col-12 pb-1">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-3">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->
    <!-- Footer Start -->
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <a href="" class="text-decoration-none">
                    <h1 class="mb-4 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border border-white px-1 mr-1">O</span>ptika Lentium</h1>
                </a>
                <p>Dobrodošli na naš online sajt Optike Lentium. Nudimo Vam širok izbor naših asortimana.</p>
                <p class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>Džemala Bijedića 64, 71000 Sarajevo</p>
                <p class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>optikalentium@gmail.com</p>
                <p class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>+387 62 356 548</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Linkovi</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" asp-action="Index"><i class="fa fa-angle-right mr-2"></i>Pocetna</a>
                            <a class="text-dark mb-2" asp-action="MeniView"><i class="fa fa-angle-right mr-2"></i>Pregled</a>
                            <a class="text-dark mb-2" asp-action="KorpaView"><i class="fa fa-angle-right mr-2"></i>Korpa</a>
                            <a class="text-dark mb-2" asp-action="Placanje"><i class="fa fa-angle-right mr-2"></i>Plaćanje</a>
                            <a class="text-dark" asp-action="LoginView"><i class="fa fa-angle-right mr-2"></i>Login</a>
                        </div>
                    </div>

                    <div class="col-md-4 mb-5">
                        <h5 class="font-weight-bold text-dark mb-4">Kontaktirajte nas</h5>
                        <form action="">
                            <div class="form-group">
                                <input type="text" class="form-control border-0 py-4" placeholder="Vase ime" required="required" />
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control border-0 py-4" placeholder="Vas email"
                                       required="required" />
                            </div>
                            <div>
                                <button class="btn btn-primary btn-block border-0 py-3" type="submit">Pošalji</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row border-top border-light mx-xl-5 py-4">
            <div class="col-md-6 px-xl-0">
                <p class="mb-md-0 text-center text-md-left text-dark">
                    &copy; <a class="text-dark font-weight-semi-bold" href="#">Optika_Lentium</a>

                </p>
            </div>
            <div class="col-md-6 px-xl-0 text-center text-md-right">
                <img class="img-fluid" src="img/payments.png" alt="">
            </div>
        </div>
    </div>
    <!-- Footer End -->
    <!-- Back to Top -->
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>

    <script>
        var radBrand = document.filterBrendovi.filterBrandRadios;
        for (var i = 0; i < radBrand.length; i++) {
            radBrand[i].onclick = function () {
                console.log(this.value)
                
            };
        }

        var radPrices = document.filterPrices.filterPriceRadios;
        for (var i = 0; i < radPrices.length; i++) {
            radPrices[i].onclick = function () {
                console.log(this.value)

            };
        }


        async function AddToCart(proizvodId) {
            document.getElementById("message").style.display = "block";
            document.getElementById("message").textContent = "Proizvod dodan u korpu!";
